<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GameResultFragment">

    <ImageView
        android:id="@+id/mainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_background" />


    <ImageView
        android:id="@+id/ivTiger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/tiger_bottom_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleVerticalLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ramka_background"
        app:layout_constraintStart_toStartOf="@id/ivRewardHeader"
        app:layout_constraintEnd_toEndOf="@id/tvTimeValue"
        app:layout_constraintTop_toTopOf="@id/ivTimeHeader"
        app:layout_constraintBottom_toBottomOf="@id/tvRewardValue"
        />

    <ImageView
        android:id="@+id/ivRewardHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/middleVerticalLine"
        app:layout_constraintBottom_toBottomOf="@id/middleLine"
        android:src="@drawable/text_rewars"
        android:paddingStart="20dp"
        />

    <ImageView
        android:id="@+id/ivTimeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/text_time"
        app:layout_constraintBottom_toTopOf="@id/ivRewardHeader"
        app:layout_constraintEnd_toStartOf="@id/middleVerticalLine"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toStartOf="@id/ivRewardHeader" />

    <ImageView
        android:id="@+id/ivCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coin_balance"
        app:layout_constraintBottom_toBottomOf="@id/ivRewardHeader"
        app:layout_constraintTop_toTopOf="@id/ivRewardHeader"
        app:layout_constraintEnd_toStartOf="@id/tvRewardValue"
        />
    <TextView
        android:id="@+id/tvRewardValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benzinbold"
        android:textSize="22dp"
        android:textColor="#252525"
        android:text="120"
        app:layout_constraintEnd_toEndOf="@id/tvTimeValue"
        app:layout_constraintTop_toTopOf="@id/ivRewardHeader"
        app:layout_constraintBottom_toBottomOf="@id/ivRewardHeader"
        />
    <TextView
        android:id="@+id/tvTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benzinbold"
        android:textSize="22dp"
        android:textColor="#252525"
        android:text="00:30"
        app:layout_constraintStart_toEndOf="@id/middleVerticalLine"
        app:layout_constraintTop_toTopOf="@id/ivTimeHeader"
        app:layout_constraintBottom_toBottomOf="@id/ivTimeHeader"
        />
    <ImageView
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_home"
        app:layout_constraintEnd_toStartOf="@id/middleVerticalLine"
        app:layout_constraintTop_toBottomOf="@id/middleLine"
        />



</androidx.constraintlayout.widget.ConstraintLayout>