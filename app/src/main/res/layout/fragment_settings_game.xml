<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartGameFragment">

    <ImageView
        android:id="@+id/mainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_background" />

    <ImageView
        android:id="@+id/btnPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/privacy_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        />

    <include
        android:id="@+id/balance"
        layout="@layout/balance_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        />

    <ImageView
        android:id="@+id/ivTigerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balance"
        app:layout_constraintBottom_toTopOf="@id/settingsBackground"
        android:src="@drawable/tiger_text"
        />

    <ImageView
        android:id="@+id/settingsBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ramka_background"
        app:layout_constraintTop_toTopOf="@id/timer"
        app:layout_constraintBottom_toBottomOf="@id/btnYes"
        app:layout_constraintStart_toStartOf="@id/timer"
        app:layout_constraintEnd_toEndOf="@id/swTimer"
        />

    <ImageView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivTigerText"
        app:layout_constraintBottom_toTopOf="@id/sound"
        android:paddingBottom="15dp"
        android:src="@drawable/timer"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        />

    <ImageView
        android:id="@+id/sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sound"
        app:layout_constraintStart_toStartOf="@id/ivTigerText"
        app:layout_constraintBottom_toTopOf="@id/btnYes"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        />

    <Switch
        android:id="@+id/swTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/ivTigerText"
        app:layout_constraintTop_toTopOf="@id/timer"
        app:layout_constraintBottom_toBottomOf="@id/timer"
        android:paddingEnd="20dp"
        android:track="@drawable/track"
        android:thumb="@drawable/thumble"
        />

    <Switch
        android:id="@+id/swSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/ivTigerText"
        app:layout_constraintTop_toTopOf="@id/sound"
        app:layout_constraintBottom_toBottomOf="@id/sound"
        android:paddingEnd="20dp"
        android:track="@drawable/track"
        android:thumb="@drawable/thumble"
        />

    <ImageView
        android:id="@+id/btnYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/btn_yes"
        android:paddingBottom="20dp"
        />

    <ImageView
        android:id="@+id/ivTiger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/tiger_bottom_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bottomCrystal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cristal_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>