<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameResultFragment">

    <ImageView
        android:id="@+id/mainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_background" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleHorisontalLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horisontalLine25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horisontalLine60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleVerticalLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalLine10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalLine90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="25dp"
        android:src="@drawable/ramka_background"
        app:layout_constraintBottom_toBottomOf="@id/horisontalLine60"
        app:layout_constraintEnd_toEndOf="@id/verticalLine90"
        app:layout_constraintStart_toStartOf="@id/verticalLine10"
        app:layout_constraintTop_toTopOf="@id/horisontalLine25" />

    <ImageView
        android:id="@+id/ramkaTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/result_top"
        app:layout_constraintBottom_toTopOf="@id/back"
        app:layout_constraintEnd_toEndOf="@id/verticalLine90"
        app:layout_constraintStart_toStartOf="@id/verticalLine10"
        app:layout_constraintTop_toTopOf="@id/back" />

    <TextView
        android:id="@+id/tvTopHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ermilovbold"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ramkaTop"
        app:layout_constraintStart_toStartOf="@id/ramkaTop"
        app:layout_constraintTop_toTopOf="@id/ramkaTop" />

    <TextView
        android:id="@+id/tvTopHeader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ermilovbold"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ramkaTop"
        app:layout_constraintStart_toStartOf="@id/ramkaTop"
        app:layout_constraintTop_toBottomOf="@id/tvTopHeader1" />

    <ImageView
        android:id="@+id/ivTiger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/tiger_bottom_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivRewardHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/text_rewars"
        app:layout_constraintStart_toStartOf="@id/back"
        app:layout_constraintTop_toBottomOf="@id/ivTimeHeader" />

    <ImageView
        android:id="@+id/ivTimeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/text_time"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="@id/back"
        app:layout_constraintTop_toTopOf="@id/back" />

    <ImageView
        android:id="@+id/ivCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coin_balance"
        app:layout_constraintBottom_toBottomOf="@id/ivRewardHeader"
        app:layout_constraintEnd_toStartOf="@id/tvRewardValue"
        app:layout_constraintTop_toTopOf="@id/ivRewardHeader"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:id="@+id/tvRewardValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benzinbold"
        android:paddingEnd="10dp"
        android:text="120"
        android:textColor="#252525"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@id/ivRewardHeader"
        app:layout_constraintEnd_toEndOf="@id/back"
        app:layout_constraintTop_toTopOf="@id/ivRewardHeader" />

    <TextView
        android:id="@+id/tvTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benzinbold"
        android:paddingEnd="10dp"
        android:text="00:30"
        android:textColor="#252525"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@id/ivTimeHeader"
        app:layout_constraintEnd_toEndOf="@id/back"
        app:layout_constraintTop_toTopOf="@id/ivTimeHeader" />

    <ImageView
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_home"
        app:layout_constraintEnd_toStartOf="@id/middleVerticalLine"
        app:layout_constraintTop_toBottomOf="@id/middleHorisontalLine" />

    <ImageView
        android:id="@+id/btnReplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_replay"
        app:layout_constraintStart_toEndOf="@id/middleVerticalLine"
        app:layout_constraintTop_toBottomOf="@id/middleHorisontalLine" />


</androidx.constraintlayout.widget.ConstraintLayout>